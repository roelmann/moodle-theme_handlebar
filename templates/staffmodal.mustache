        <div class="card-header card-primary">
            <h3 class="card-title">
                <i class="fa fa-{{{icon}}}">&nbsp</i>{{{title}}}
            </h3>
        </div>
        <div class="card-block">
            <ul class="list-group">
                {{#coursegrouplinks}}
